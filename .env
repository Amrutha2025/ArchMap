# Neo4j database config
NEO4J_URI=bolt://neo4j:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=devpassword

# PostgreSQL database config
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=archmap
POSTGRES_USER=archmap_user
POSTGRES_PASSWORD=devpassword

# Redis cache config
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=devpassword

# Backend / Application
BACKEND_PORT=8000
FRONTEND_PORT=3000
VITE_API_URL=http://localhost:8000
VITE_WS_URL=ws://localhost:8000

# JWT / Security settings
JWT_SECRET=your-secret-key-here-change-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRATION_DAYS=7

# CORS settings
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173

# Environment mode
ENVIRONMENT=development
DEBUG=true

# GitHub API token (leave blank if not used)
GITHUB_TOKEN=

# GitHub API URL
GITHUB_API_BASE_URL=https://api.github.com

# Git repository analysis limits
GIT_CACHE_DIR=/tmp/archmap/repos
GIT_MAX_CACHE_SIZE_GB=10
GIT_CLEANUP_DAYS=30
DEFAULT_ANALYSIS_DEPTH=full

MAX_REPOSITORY_SIZE_MB=500
MAX_COMMIT_HISTORY_MONTHS=24
MAX_CONCURRENT_ANALYSES=3

# Optional Sentry for error tracking
SENTRY_DSN=
